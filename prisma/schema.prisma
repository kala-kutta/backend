generator client {
    provider = "prisma-client"
    output   = "./generated"
    runtime  = "bun"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model User {
    id          String   @id
    username    String   @unique
    password    String
    connections String[]
}

model connections {
    id    String  @id
    status ConnectionStatus @default(fresh)
}

enum ConnectionStatus {
    fresh
    opened
    stale
}
